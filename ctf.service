[Unit]
Description=Serves CTF challenge
After=network.target

[Service]
User=ctf
Group=ctf
WorkingDirectory=~

PrivateTmp=true
#PrivateDevices=true
PrivateUsers=true
ProtectSystem=full
ProtectHome=read-only
Restart=always

ExecStart=/usr/bin/socat TCP-LISTEN:1337,fork,reuseaddr exec:/home/ctf/challenge.sh,stderr,pty,echo=0

[Install]
WantedBy=multi-user.target
